<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6A5353"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#581845"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/textViewC300"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#7694FF"
            android:gravity="center"
            android:text="@string/c300"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#6FBD17"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/textViewC346"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#BDE69A"
            android:gravity="center"
            android:text="@string/c346"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#D63333"
        android:padding="5dp"
    android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewC322"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#D89494"
            android:gravity="center"
            android:text="@string/c322"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#344B8F"
        android:padding="5dp"
    android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewC382"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#C36F6F"
            android:gravity="center"
            android:text="@string/c382"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" />
    </LinearLayout>

</LinearLayout>